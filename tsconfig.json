{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": false
}
